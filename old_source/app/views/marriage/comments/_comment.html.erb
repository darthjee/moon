<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-1">
      <img src="{{ comment.user.gravatarUrl() }}" class="comment-avatar">
    </div>

    <div class="col-sm-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>{{ comment.user.name }}</strong>
          <span class="text-muted">Comentado hรก
            {{ comment.time_elapsed.amount }}
            <span ng-show="{{ comment.time_elapsed.second }}">segundos</span>
            <span ng-show="{{ comment.time_elapsed.minute }}">minutos</span>
            <span ng-show="{{ comment.time_elapsed.hour }}">horas</span>
            <span ng-show="{{ comment.time_elapsed.day }}">dias</span>
            <span ng-show="{{ comment.time_elapsed.year }}">anos</span>
          </span>
        </div>
        <div class="panel-body">
          {{ comment.text }}
        </div>
      </div>
    </div>
  </div>
</div>