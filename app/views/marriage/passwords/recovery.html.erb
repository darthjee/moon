<div class="bg-primary form-box col-md-6 col-md-offset-3">
  <form id="recovery-form" class="form-horizontal">
    <div>
      <div class="glyphicon glyphicon-chevron-right" id="icon-login-msg"></div>
      <span id="text-login-msg">Digite seu e-mail para recuperar a senha.</span>
    </div>

    <div class="form-group">
      <label for="login-email" class="col-md-2 control-label">E-mail</label>
      <div class="col-md-10">
        <input type="text" name="login-email" class="form-control" ng-model="lc.login.email" />
      </div>
    </div>

    <div class="form-group text-center">
      <button type="submit" class="btn btn-default" ng-click="lc.performLogin()">Enviar e-mail</button>
    </div>
  </form>
</div>
