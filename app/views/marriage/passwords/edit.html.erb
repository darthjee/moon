<div class="bg-primary form-box col-md-6 col-md-offset-3">
  <form id="recovery-form" class="form-horizontal">
    <div>
      <div class="glyphicon glyphicon-chevron-right"></div>
      <span>{{pc.user.name}}, Atualize e confirme sua senha abaixo.</span>
    </div>

    <div class="input-error" ng-show="pc.error">{{ pc.error }}</div>
    <div class="alert alert-success" role="alert" ng-show="pc.success">
      <button type="button" class="close" aria-label="Close" ng-click="pc.success = false"><span aria-hidden="true">&times;</span></button>
      Senha salva com sucesso
    </div>

    <div class="form-group">
      <label for="login-email" class="col-md-2 control-label">Senha</label>
      <div class="col-md-10">
        <input type="password" name="passowrd" class="form-control" ng-model="pc.user.password" />
      </div>
    </div>

    <div class="form-group">
      <label for="login-email" class="col-md-2 control-label">Confirmação de Senha</label>
      <div class="col-md-10">
        <input type="password" name="passowrd-confirmation" class="form-control" ng-model="pc.user.password_confirmation" />
      </div>
    </div>

    <div class="form-group text-center">
      <button type="submit" class="btn btn-default" ng-click="pc.update()">Salvar</button>
    </div>
  </form>
</div>
