<div ng-show="glc.loaded">
  <div class="row">
    <div class="col-md-3 col-sm-12" ng-repeat="gift in glc.gifts">
      <%= render partial: 'gift_block' %>
    </div>
  </div>

  <nav>
    <ul class="pagination">
      <li ng-show="glc.page > 1">
        <%= link_to angular_path_to(paginated_marriage_gifts_path('') + '{{ glc.page-1 }}'), {
          'aria-label' => 'Previous'
        } do %>
          <span aria-hidden="true">&laquo;</span>
        <% end %>
      </li>
      <li ng-repeat="page in glc.pagination track by $index">
        <%= link_to '{{ page }}',
            angular_path_to(paginated_marriage_gifts_path('') + '{{ page }}'),
            'ng-show' => 'page' %>
         <span ng-show="!page">...</span>
      </li>
      <li ng-show="glc.page < glc.pages">
        <%= link_to angular_path_to(paginated_marriage_gifts_path('') + '{{ glc.page+1 }}'), {
          'aria-label' => 'Next'
        } do %>
          <span aria-hidden="true">&raquo;</span>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
