<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-1">
      <img src="{{ comment.user.gravatarUrl() }}" class="comment-avatar">
    </div>

    <div class="col-sm-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>{{ comment.user.name }}</strong>
          <span class="text-muted">commented 5 days ago</span>
        </div>
        <div class="panel-body">
          {{ comment.text }}
        </div>
      </div>
    </div>
  </div>
</div>