<div class="bg-primary form-box">
  <form id="login-form" class="form-horizontal" ng-controller="LoginController as lc">
    <div id="div-login-msg">
      <div class="glyphicon glyphicon-chevron-right" id="icon-login-msg"></div>
      <span id="text-login-msg">Digite seu e-mail e senha para fazer login.</span>
    </div>

    <div class="form-group">
      <label for="login-email" class="col-md-2 control-label">E-mail</label>
      <div class="col-md-10">
        <input type="text" name="login-email" class="form-control" ng-model="lc.login.email" />
      </div>
    </div>

    <div class="form-group">
      <label for="login-password" class="col-md-2 control-label">Senha</label>
      <div class="col-md-10">
        <input type="text" name="login-password" class="form-control" ng-model="lc.login.password" />
      </div>
    </div>

    <input type="hidden" value="<%= redirection_path %>">

    <div class="form-group text-center">
      <button type="submit" class="btn btn-default" ng-click="lc.performLogin()">Fazer Login</button>
    </div>
  </form>
</div>
