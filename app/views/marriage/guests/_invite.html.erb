<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{ic.invite().label}}</h3>
  </div>

  <div class="panel-body">
    <div class="input-group" ng-repeat="guest in ic.invite().guests">
      <span class="input-group-addon">
        <input type="checkbox" name="guest-{{guest.id}}" ng-model="guest.presence">
      </span>
      <input type="text" class="form-control" ng-model="guest.name" />
    </div>
  </div>
</div>
