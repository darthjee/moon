<div class="panel panel-default" ng-show="ic.invite_info.id">
  <div class="panel-heading">
    <h3 class="panel-title">{{ic.invite().label}}</h3>
  </div>

  <div class="panel-body">
    <div class="guests-invited-list">
      <div class="input-group" ng-repeat="guest in ic.invite().guests track by $index">
        <span class="input-group-addon">
          <input type="checkbox" name="guest-{{$index}}-presence" ng-model="guest.presence">
        </span>
        <input type="text" name="guest-{{$index}}-name" class="form-control" ng-model="guest.name" />
      </div>
    </div>

    <div class="btn-group">
      <button type="submit" class="btn btn-default" ng-click="ic.update()">Atualizar</button>
    </div>
  </div>
</div>
