<div class="panel panel-default">
  <div class="panel-heading"><h4>{{ maid.name }}</h4></div>
  <div class="panel-body">

    <ul>
      <li ng-repeat="m in bmc.allMaids" style="background-color: {{m.color}}" class="dress-picker">
      </li>
    </ul>

    <p>Selecione a cor do seu vestido</p>
    <div style="background-color: {{maid.color}}"
      colorpicker ng-model="maid.color" class="dress-picker">
    </div>
    <div class="btn-group">
      <button type="submit" class="btn btn-default" ng-click="bmc.saveMaid($index)">Salvar</button>
    </div>
  </div>
</div>
