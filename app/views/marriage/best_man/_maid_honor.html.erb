<div class="panel panel-default">
  <div class="panel-heading"><h4>{{ maid.name }}</h4></div>
  <div class="panel-body">

    <div>
      <span ng-repeat="m in bmc.maidData.all" class="dress-picker">
        <%= image_tag 'dress.png', style: "background-color: {{m.color}}" %>
      </span>
    </div>

    <p>Selecione a cor do seu vestido</p>
    <div style="background-color: {{maid.color}}"
      colorpicker ng-model="maid.color" class="dress-picker">
      <%= image_tag 'dress.png' %>
    </div>
    <div class="btn-group">
      <button type="submit" class="btn btn-default" ng-click="bmc.saveGuest(maid.id)">Salvar</button>
    </div>
  </div>
</div>
