<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div id="div-forms">
        <form id="login-form">
          <div id="div-login-msg">
            <div class="glyphicon glyphicon-chevron-right" id="icon-login-msg"></div>
            <span id="text-login-msg">Digite seu e-mail e senha para fazer login.</span>
          </div>

          <div class="input-group agregated-block">
            <span class="input-group-addon">E-mail</span>
            <input type="text" name="login-email"
                   class="form-control" />
          </div>

          <div class="input-group agregated-block">
            <span class="input-group-addon">Senha</span>
            <input type="text" name="login-password"
                   class="form-control" />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
