<div class="debug-hide debug-float col-sm-6">
  <div class="panel-heading">
    {{ picture.id }}
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <select ng-model="picture.album_id">
          <option ng-repeat="album in pc.albums" value="{{ album.id }}">
            {{ album.name }}
          </option>
        </select>

        <button ng-click="pc.update(picture)">Atualizar</button>
      </div>
    </div>
  </div>
</div>
