<nav>
  <ul class="pagination">
    <li ng-show="pc.page > 1">
      <%= link_to(
          angular_path_to(
            paginated_marriage_album_pictures_safe_path(page: '{{ pc.page-1 }}')
          ),
          'aria-label' => 'Previous'
        ) do %>
        <span aria-hidden="true">&laquo;</span>
      <% end %>
    </li>
    <li ng-repeat="page in pc.pagination track by $index" class="{{ pc.page == page ? 'active' : '' }}">
      <%= link_to(
          angular_path_to(
            paginated_marriage_album_pictures_safe_path(page: '{{ page }}')
          ), 'ng-show' => 'page'
        ) do %>
        {{ page }} <span class="sr-only" ng-show="pc.page == page">(current)</span>
      <% end %>
       <span ng-show="!page" class="disabled">&#8230;</span>
    </li>
    <li ng-show="pc.page < pc.pages">
      <%= link_to(
          angular_path_to(
            paginated_marriage_album_pictures_safe_path(page: '{{ pc.page+1 }}')
          ), 'aria-label' => 'Next'
        ) do %>
        <span aria-hidden="true">&raquo;</span>
      <% end %>
    </li>
  </ul>
</nav>

